/* We're using double size float */
type MyFloat = f64;

/* Simple vector type for 2D position */
#[deriving(Eq)]
struct Vec(MyFloat, MyFloat, MyFloat);

impl ToStr for Vec {
  fn to_str(&self) -> ~str {
    let &Vec(x,y,z) = self;
    format!("({},{},{})", x, y, z)
  }
}


