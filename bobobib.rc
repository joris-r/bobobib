/* TODO passing the manager on the heap is boring */
fn create_entity_at_origin(mng : &mut Manager) -> Entity{
  let e = mng.new_entity();
  let zero = Vec(0., 0., 0.);
  mng.table_position.set(e, zero);
  return e;
}

